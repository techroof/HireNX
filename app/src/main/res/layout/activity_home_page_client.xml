<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConsumerProfile.HomePageClientActivity">

    <TextView
        android:id="@+id/label_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="HOME"
        android:textColor="@color/black"
        android:layout_marginTop="30dp"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"/>


    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpager_client"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label_home"
        >


    </androidx.viewpager.widget.ViewPager>

    <androidx.cardview.widget.CardView
        android:id="@+id/crdView_change"
        android:layout_width="250dp"
        android:layout_height="65dp"
        android:layout_marginBottom="20dp"
        app:cardBackgroundColor="@color/cardview"
        app:cardCornerRadius="30dp"
        app:cardElevation="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_client_home"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/home"
                android:layerType="software"
                app:tint="@color/profilecardview"
                app:layout_constraintEnd_toStartOf="@id/img_menu"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/tv_client_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Home"
                android:textColor="@color/profilecardview"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@+id/img_client_home"
                app:layout_constraintStart_toStartOf="@id/img_client_home"
                app:layout_constraintEnd_toEndOf="@id/img_client_home"/>

            <ImageView
                android:id="@+id/img_client_profile"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/user"
                android:layerType="software"
                app:tint="@color/profilecardview"
                app:layout_constraintBottom_toTopOf="@id/tv_menu"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>


            <TextView
                android:id="@+id/tv_client_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Profile"
                android:textColor="@color/profilecardview"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@+id/img_client_profile"
                app:layout_constraintStart_toStartOf="@id/img_client_profile"
                app:layout_constraintEnd_toEndOf="@id/img_client_profile" />


            <ImageView
                android:id="@+id/img_client_menu"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="30dp"
                android:layerType="software"
                android:src="@drawable/menu_2"
                app:tint="@color/profilecardview"
                app:layout_constraintTop_toBottomOf="@+id/img_client_profile"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>


            <TextView
                android:id="@+id/tv_client_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Menu"
                android:textColor="@color/profilecardview"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@+id/img_client_profile"
                app:layout_constraintStart_toStartOf="@id/img_client_menu"
                app:layout_constraintEnd_toEndOf="@id/img_client_menu" />



        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>