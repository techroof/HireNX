<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConsumerProfile.HomePageClientActivity">

    <TextView
        android:id="@+id/label_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="HOME"
        android:textColor="@color/black"
        android:layout_marginTop="30dp"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"/>


    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpager_client"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label_home"
        >


    </androidx.viewpager.widget.ViewPager>

    <androidx.cardview.widget.CardView
        android:id="@+id/crdView_change"
        android:layout_width="250dp"
        android:layout_height="65dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/cardview"
        app:cardCornerRadius="30dp"
        app:cardElevation="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <ImageView
            android:id="@+id/img_client_home"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/home"
            android:layerType="software"
            app:tint="@color/black" />


        <TextView
            android:id="@+id/tv_client_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="38dp"
            android:text="Home"
            android:textColor="@color/black"
            android:textSize="12sp" />



        <ImageView
            android:id="@+id/img_client_profile"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="112dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/user"
            android:layerType="software"
            app:tint="@color/black" />


        <TextView
            android:id="@+id/tv_client_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="105dp"
            android:layout_marginTop="38dp"
            android:text="Profile"
            android:textColor="@color/black"
            android:textSize="12sp" />


        <ImageView
            android:id="@+id/img_client_menu"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="190dp"
            android:layout_marginTop="8dp"
            android:layerType="software"
            android:src="@drawable/menu_2"
            app:tint="@color/black" />


        <TextView
            android:id="@+id/tv_client_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="187dp"
            android:layout_marginTop="38dp"
            android:text="Menu"
            android:textColor="@color/black"
            android:textSize="12sp" />

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>