<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Authentication.RegisterActivity">


    <ImageView
        android:id="@+id/img_move_towards_registration_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginStart="25dp"
        android:src="@drawable/round_arrow_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/label_create_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginStart="25dp"
        android:text="Create Your Account"
        android:textAlignment="textStart"
        android:gravity="start"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_move_towards_registration_type" />

    <TextView
        android:id="@+id/label_create_account2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:text="Please enter your mobile number, then we will\nsend OTP to verify"
        android:textSize="14sp"
        android:textAlignment="textStart"
        android:gravity="start"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/label_create_account" />


    <TextView
        android:id="@+id/label_phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter your phone number"
        android:textSize="14sp"
        android:layout_marginTop="80dp"
        android:layout_marginStart="25dp"
        app:layout_constraintTop_toBottomOf="@id/label_create_account2"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/edt_country_code"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="+91"
        android:textSize="16sp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingStart="15dp"
        android:paddingEnd="25dp"
        android:focusableInTouchMode="false"
        android:focusable="false"
        android:clickable="false"
        android:layout_marginStart="25dp"
        android:inputType="phone"
        android:layout_marginTop="8dp"
        android:background="@drawable/roundedittextprofile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/label_phone_number"/>


    <EditText
        android:id="@+id/edt_phone_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="For eg. 8648151742"
        android:textSize="16sp"
        android:padding="12dp"
        android:inputType="phone"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/roundedittextprofile"
        app:layout_constraintStart_toEndOf="@id/edt_country_code"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/label_phone_number"/>

    <Button
        android:id="@+id/btn_request_otp_registration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/roundedbutton"
        android:text="CONTINUE"
        app:backgroundTint="@null"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edt_phone_number" />


    <TextView
        android:id="@+id/label_account_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already have an account? Login"
        android:textColor="@color/accentColor"
        android:textSize="14sp"
        app:layout_constraintVertical_bias="0.7"
        app:layout_constraintTop_toBottomOf="@id/btn_request_otp_registration"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>